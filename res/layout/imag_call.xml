<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageButton
            android:id="@+id/gp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/grameenphone" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageButton
            android:id="@+id/artl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/airtel" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageButton
            android:id="@+id/blnk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/banglalink" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageButton
            android:id="@+id/rbi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/robi" />
    </RelativeLayout>

     <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp" >
    </RelativeLayout>

</LinearLayout>